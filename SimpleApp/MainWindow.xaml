                    <GradientStop Color="Black" />
                    <GradientStop Offset="0.91" Color="#FF10B66A" />
                </LinearGradientBrush>
            </Button.Background>
            2
        </Button>
        <Button
            Grid.Row="1"
            Grid.Column="2"
            BorderBrush="#FF047A5A">
            <Button.Background>
                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                    <GradientStop Color="Black" />
                    <GradientStop Offset="0.91" Color="#FF10B66A" />
                </LinearGradientBrush>
            </Button.Background>
			3
		</Button>
        <Button
